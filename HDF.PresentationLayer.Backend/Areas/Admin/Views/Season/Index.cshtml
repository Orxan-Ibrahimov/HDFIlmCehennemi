@model List<Season>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h1 class="display-3 text-info mb-4">Seasons</h1>
                <table class="table table-dark align-middle">
                    <thead>
                        <tr>
                            <th scope="col">
                                <h5 class="text-info text-center">#</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Season Name</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Season Number</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Episode Count</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Season Description</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Movie Name</h5>
                            </th>                          
                            <th scope="col">
                                <h5 class="text-info text-center">Operations</h5>
                            </th>
                            <th scope="col">
                                <a asp-action="Create" class="btn btn-lg btn-lg-square btn-outline-success m-2"><i class="fa fa-plus"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var season in Model)
                        {
                            <tr>
                                <th scope="row">@season.Id</th>
                                <td class="text-center">@((season.Name.Length > 20) ? (@season.Name.Substring(0, 20) + "...") : @season.Name)</td>
                                <td class="text-center">@season.SeasonNumber</td>
                                <td class="text-center">@season.Episodes?.Count()</td>
                                <td class="text-center">@((season.Description.Length > 20) ? (@season.Description.Substring(0, 20) + "...") : @season.Description)</td>
                                <td class="text-center">@((season.Movie.Name.Length > 20) ? (@season.Movie.Name.Substring(0, 20) + "...") : @season.Movie.Name)</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@season.Id" class="btn btn-lg btn-lg-square btn-outline-info m-2"><i class="fa fa-info"></i></a>
                                    <a asp-action="Edit" asp-route-id="@season.Id" class="btn btn-lg btn-lg-square btn-outline-warning m-2"><i class="fa fa-pen"></i></a>
                                    <a asp-action="Delete" asp-route-id="@season.Id" class="btn btn-lg btn-lg-square btn-outline-danger m-2"><i class="fa fa-trash"></i></a>
                                </td>
                               <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
