@model Country
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 offset-xl-3">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create A Country</h6>
                <form enctype="multipart/form-data" method="post">
                    <div class="mb-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control rounded-pill" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShortName" class="form-label"> Short Name</label>
                        <input asp-for="ShortName" class="form-control rounded-pill" required />
                        <span asp-validation-for="ShortName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label"> Image </label>
                        <input asp-for="Photo" class="form-control rounded-pill" accept="image/*" required />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>    