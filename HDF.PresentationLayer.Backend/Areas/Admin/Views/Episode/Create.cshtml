@model EpisodeVM
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 offset-xl-3">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create A Epsiode</h6>
                <form enctype="multipart/form-data" method="post">
                    <div class="mb-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="Episode.Name" class="form-label">Episode</label>
                        <input asp-for="Episode.Name" class="form-control pan-form-style rounded-pill" required />
                        <span asp-validation-for="Episode.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Episode.EpisodeNumber" class="form-label">Episode Number</label>
                        <input asp-for="Episode.EpisodeNumber" min="0" max="10" class="form-control pan-form-style rounded-pill" required />
                        <span asp-validation-for="Episode.EpisodeNumber" class="text-danger"></span>
                    </div>                   
                    <div class="mb-3">
                        <label asp-for="Episode.EpisodePhoto" class="form-label">Episode Image</label>
                        <input asp-for="Episode.EpisodePhoto" accept="image/*" class="form-control pan-form-style rounded-pill" required />
                        <span asp-validation-for="Episode.EpisodePhoto" class="text-danger"></span>
                    </div>                 
                    <div class="mb-3">
                        <label asp-for="Episode.MovieId">Movie</label>
                        <select asp-for="Episode.MovieId" asp-items="@Model.MovieList" class="form-control pan-form-style" required>
                            <option selected>Choose</option>
                        </select>
                        <span asp-validation-for="Episode.MovieId"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>    