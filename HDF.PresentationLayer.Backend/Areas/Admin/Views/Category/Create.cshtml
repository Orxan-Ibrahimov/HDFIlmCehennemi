@using HDF.Utilities.Helpers;
@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 offset-xl-3">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create A Category</h6>
                <form method="post">
                    <div class="mb-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control rounded-pill" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>  
                    <div class="mb-3">
                        <label asp-for="Speciality"></label>
                        <select asp-for="Speciality" class="form-control pan-form-style" required>
                            <option selected>Choose</option>
                            <option value="@Speciality.Normal">Normal</option>
                            <option value="@Speciality.Special">Özel</option>
                            <option value="@Speciality.Language">Dil</option>
                        </select>
                        <span asp-validation-for="Speciality"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>    