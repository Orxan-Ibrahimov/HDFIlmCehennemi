@{
    Layout = null;
}
<form id="register" class="authorization">
    <div class="authorization-header">
        <h4 class="text-white mb-0">Kayıt ol</h4>
        <span class="authorization-close">&times;</span>
    </div>
    <div class="authorization-message"></div>
    <div class="authorization-body">
        <div class="authorization-input-group">
            <label for="email">E-Posta</label>
            <input class="form-control" type="email" id="email" />
        </div>
        <div class="authorization-input-group">
            <label for="username">Kullanıcı Adı</label>
            <input class="form-control" type="text" id="username" />
        </div>
        <div class="authorization-input-group">
            <label for="password">Şifre</label>
            <input class="form-control" type="password" id="password" />
        </div>
        <div class="authorization-input-group">
            <label for="password-again">Şifre Tekrar</label>
            <input class="form-control" type="password" id="password-again" />
        </div>
    </div>
    <div class="authorization-footer d-flex justify-content-end">
        <a href="#" class="signIn rounded">
            Kayıt Ol
        </a>
    </div>
</form>