@model LoginVM
@{
    Layout = null;
}

<form id="login" class="authorization">
    <div class="authorization-header">
        <h4 class="text-white mb-0">Giris Yap</h4>
        <span class="authorization-close">&times;</span>
    </div>
    <div class="authorization-message"></div>
    <div class="authorization-body">        
        <div class="authorization-input-group">
            <label>Kullanıcı Adı</label>
            <input id="nickname" class="form-control" type="text" />
        </div>
        <div class="authorization-input-group">
            <label >Şifre</label>
            <input id="pass" class="form-control" type="password" />
        </div>
    </div>
    <div class="authorization-footer">
        <div class="d-flex justify-content-between my-3">
            <a class="d-inline-block text-white small" href="#">E-mail Aktivasyon</a>
            <a class="d-inline-block text-white small" href="#">Sifremi Unutdum</a>
        </div>
        <a href="#" class="signIn rounded">
            <i class="fa-solid fa-lock"></i>
            Giris Yap
        </a>
    </div>
</form>