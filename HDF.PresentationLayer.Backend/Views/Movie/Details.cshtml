@model Movie
@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 offset-xl-3">
            <div class="bg-secondary rounded h-100 p-4">
                <h1 class="mb-4 text-info">Movie - <span class="text-white">@Model.Name</span></h1>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-transparent">Id: <span class="text-white">@Model.Id</span></li>
                    <li class="list-group-item bg-transparent">Name: <span class="text-white">@Model.Name</span></li>
                    <li class="list-group-item bg-transparent">IMDb Point: <span class="text-white">@Model.IMDBPoint</span></li>
                    <li class="list-group-item bg-transparent">Movie Point: <span class="text-white">@Model.MoviePoint</span></li>
                    <li class="list-group-item bg-transparent">Release Date: <span class="text-white">@Model.ReleaseDate.Year</span></li>
                    <li class="list-group-item bg-transparent">Country: <span class="text-white">@Model.Country.Name</span></li>
                    <li class="list-group-item bg-transparent">Active?:
                        @if (Model.IsActive)
                            {
                            <span class="text-success"><i class="fa fa-circle-check"></i></span>
                            }
                        else{
                            <span class="text-danger"><i class="fa fa-circle-xmark"></i></span>
                            }
                            </li>
                    <li class="list-group-item bg-transparent">
                        Film or Serie?:
                        @if (Model.IsSeries)
                        {
                            <span class="text-white">Dizi</span>
                        }
                        else
                        {
                            <span class="text-white">Film</span>
                        }
                    </li>
                    <li class="list-group-item bg-transparent">Film's Annotation: <span class="text-white">@Model.Annotation</span></li>
                    <li class="list-group-item bg-transparent">Category:  
                        @foreach (var movieCategory in Model.MovieCategories)
                        {
                            <span class="badge bg-success">@movieCategory.Category.Name</span>
                        }
                    </li>
                    <li class="list-group-item bg-transparent">
                        Language:
                        @foreach (var movieLanguage in Model.MovieLanguages)
                        {
                            <span class="badge bg-warning">@movieLanguage.Language.LanguageKind</span>
                        }
                    </li>
                    <li class="list-group-item bg-transparent">
                        Language:
                        @foreach (var movieKind in Model.MovieKinds)
                        {
                            <span class="badge bg-dark">@movieKind.Kind.Name</span>
                        }
                    </li>
                </ul>
                <a asp-action="Index" class="btn btn-info m-2"><i class="fa fa-arrow-left"></i></a>
                <a asp-action="DeleteOrActive" asp-route-id="@Model.Id" class="btn btn-@(Model.IsActive?"danger":"success") m-2">
                    @(Model.IsActive?"Remove":"Make Active")
                </a>
            </div>
        </div>
    </div>
</div>