@model List<Movie>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h1 class="display-3 text-info mb-4">Movies</h1>
                <table class="table table-dark align-middle">
                    <thead>
                        <tr>
                            <th scope="col">
                                <h5 class="text-info text-center">#</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Movie</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Move Point</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">IMDb</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Active?</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Country</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Annotation</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Image</h5>
                            </th>
                            <th scope="col">
                                <h5 class="text-info text-center">Operations</h5>
                            </th>
                            <th scope="col">
                                <a asp-action="Create" class="btn btn-lg btn-lg-square btn-outline-success m-2"><i class="fa fa-plus"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model)
                        {
                            <tr>
                                <th scope="row">@movie.Id</th>
                                <td class="text-center">@movie.Name</td>
                                <td class="text-center">@movie.MoviePoint</td>
                                <td class="text-center">@movie.IMDBPoint</td>
                                <td class="text-center">
                                    @if (movie.IsActive)
                                    {
                                        <span class="text-success"><i class="fa fa-circle-check"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="fa fa-circle-xmark"></i></span>
                                    }
                                </td>
                                <td class="text-center">@movie.Country.Name</td>
                                @if (movie.Annotation.Length > 20)
                                    {
                                    <td>@movie.Annotation.Substring(0,20)</td>
                                    }
                                    else
                                    {
                                    <td class="text-center">@movie.Annotation</td>
                                    }                                 
                                <td class="text-center">
                                    <img class="rounded-circle flex-shrink-0" src="~/img/@movie.FilmImage" alt="movie" style="width: 40px; height: 40px;" />
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-lg btn-lg-square btn-outline-info m-2"><i class="fa fa-info"></i></a>
                                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-lg btn-lg-square btn-outline-warning m-2"><i class="fa fa-pen"></i></a>
                                    <a asp-action="DeleteOrActive" asp-route-id="@movie.Id" class="btn btn-lg btn-lg-square @(movie.IsActive?"btn-outline-danger":"btn-outline-success") m-2"><i class="fa fa-@(movie.IsActive?"trash":"check")"></i></a>
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
